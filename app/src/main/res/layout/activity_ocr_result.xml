<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <RadioButton
                android:id="@+id/rb_mt"
                style="@style/blackTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="美团" />

            <RadioButton
                android:id="@+id/rb_elm"
                style="@style/blackTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="饿了么" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编号：" />

            <EditText
                android:id="@+id/et_orderno"
                style="@style/blackTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="请输入订单编号" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓名：" />

            <EditText
                android:id="@+id/et_name"
                style="@style/blackTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请手动输入姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电话：" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/blackTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请手动输入电话" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center|top"
                android:text="地址：" />

            <EditText
                android:id="@+id/et_address"
                style="@style/blackTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请手动输入地址"
                android:singleLine="false"
                tools:hint="请手动输入地址\n请手动输入地址\n请手动输入地址\n请手动输入地址" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
              android:layout_marginRight="10dp"
                android:background="@drawable/selector_list_item_background"
                android:gravity="center"
                android:padding="14dp"
                android:layout_weight="1"
                android:text="保存"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_save_continue"
                android:layout_width="120dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/selector_list_item_background"
                android:gravity="center"
                android:padding="14dp"
                android:layout_weight="1"
                android:text="保存并继续"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>